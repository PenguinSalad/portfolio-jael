---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle.astro";
const { title = "Jael Cervantes" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="shadow-md bg-[var(--color-surface-a10)]">
      <nav
        class="container mx-auto flex items-center justify-between py-4 px-6"
      >
        <a href="/" class="text-2xl font-semibold">My Art</a>
        <div class="space-x-4">
          <a href="/" class="px-3 py-1 rounded-md transition">Home</a>
          <a href="/about" class="px-3 py-1 rounded-md transition">About</a>
          <a href="/contact" class="px-3 py-1 rounded-md transition">Contact</a>
        </div>
      </nav>
    </header>

    <main class="flex-grow container mx-auto py-12 px-6">
      <slot />
    </main>

    <footer class="text-center text-sm text-gray-500 py-6">
      Â© {new Date().getFullYear()} Jael Cervantes - Portfolio
    </footer>
    <!-- Theme Toggle Button on the bottom right corner -->
    <ThemeToggle />
  </body>
</html>
